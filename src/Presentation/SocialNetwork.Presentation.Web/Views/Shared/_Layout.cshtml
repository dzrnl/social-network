@{
    var title = ViewData["Title"]?.ToString();
    var currentUser = ViewData["CurrentUser"] as SocialNetwork.Application.Models.User;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title</title>
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body>
@if (!(title == null ||
       title.Contains("Вход в систему") ||
       title.Contains("Регистрация")))
{
    <header class="site-header">
        <div class="header-container">
            <div class="site-title">
                <a href="/">SocialNetwork</a>
            </div>

            <div class="auth-links">
                @if (currentUser != null)
                {
                    <a href="/@currentUser.Username">
                        Моя страница (@currentUser.Username)
                    </a>
                }
                else
                {
                    <a href="/login" class="btn btn-primary">Войти</a>
                }
            </div>
        </div>
    </header>

    <div class="main-layout">
        <nav class="sidebar">
            <ul>
                <li><a href="/search">Поиск</a></li>
                @if (currentUser != null)
                {
                    <li><a href="/@currentUser.Username">Профиль</a></li>
                }
                <li><a href="/feed">Новости</a></li>
                @if (currentUser != null)
                {
                    <li><a href="/messages">Сообщения</a></li>
                    <li><a href="/friends">Друзья</a></li>
                    <li><a href="/settings">Настройки</a></li>
                }
            </ul>
        </nav>

        <main class="main-content">
            <h1>@title</h1>
            
            @RenderBody()
        </main>
    </div>
}
else
{
    <div class="container">
        <h1>@title</h1>
        
        @RenderBody()
    </div>
}
</body>
</html>