@model SocialNetwork.Presentation.Web.Models.Settings.UserPublicInfoModel

@{
    ViewData["Title"] = "Настройки";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm rounded-3 mb-4">
                <div class="card-body">
                    <h4 class="card-title mb-4">Изменение профиля</h4>

                    <form method="post" asp-action="UpdateUserPublicInfo">
                        <div class="mb-3">
                            <label for="Name" class="form-label">Имя</label>
                            <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name"
                                   placeholder="Введите новое имя"/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Surname" class="form-label">Фамилия</label>
                            <input type="text" id="Surname" name="Surname" class="form-control" value="@Model.Surname"
                                   placeholder="Введите новую фамилию"/>
                            <span asp-validation-for="Surname" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Сохранить изменения</button>
                    </form>
                </div>
            </div>

            <div class="card shadow-sm rounded-3">
                <div class="card-body">
                    <h4 class="card-title text-danger">Удалить аккаунт</h4>
                    <form method="post" asp-action="DeleteUser">
                        <button type="submit" class="btn btn-outline-danger">Удалить аккаунт</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>