@{
    ViewData["Title"] = "Настройки";
}

<h3>Изменить имя</h3>

<form method="post" asp-action="ChangeUserName">
    <div class="form-group">
        <label for="NewName">Новое имя</label>
        <input type="text" id="NewName" name="NewName" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Изменить</button>
</form>

<h3>Удалить аккаунт</h3>

<form method="post" asp-action="DeleteUser">
    <button type="submit" class="btn btn-primary">Удалить аккаунт</button>
</form>